@{
    ViewData["Title"] = "Dashboard";
}

@model Activity

<h1>Create New Activity</h1>


<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-2">
            <form asp-controller="Activities" asp-action="Create" method="POST">
                <div class="form-group row">
                    <label asp-for="Title" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-7">
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title" class="text-danger font-weight-bold"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Time" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-7">
                        <input asp-for="Time" class="form-control">
                        <span asp-validation-for="Time" class="text-danger font-weight-bold"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Date" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-7">
                        <input asp-for="Date" class="form-control">
                        <span asp-validation-for="Date" class="text-danger font-weight-bold"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Duration" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-5">
                        <input asp-for="Duration" class="form-control">
                        <select asp-for="DurationTime" class="form-control">
                            <option value="Mins">Mins</option>
                            <option value="Hrs">Hrs</option>
                            <option value="Days">Days</option>
                        </select>
                        <span asp-validation-for="Duration" class="text-danger font-weight-bold"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-7">
                        <textarea asp-for="Description" cols="30" rows="10"></textarea>
                        <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
                    </div>
                </div>
                
                
                <button class="btn btn-success">Create</button>
            </form>
        </div>
    </div>
</div>