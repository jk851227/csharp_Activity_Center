@model User
<h1 class="text-center"> Register </h1>

<form asp-action="Register" asp-controller="Home" method="POST">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control">
        <span class="text-danger font-weight-bold" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control">
        <span class="text-danger font-weight-bold" asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
        <span class="text-danger font-weight-bold" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control">
        <span class="text-danger font-weight-bold" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="Confirm"></label>
        <input asp-for="Confirm" class="form-control">
        <span class="text-danger font-weight-bold" asp-validation-for="Confirm"></span>
    </div>
    <button class="btn btn-success">Register</button>
</form>